{
  "extends": "@strapi/typescript-utils/tsconfigs/server.json",
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "strict": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
//      "~/*": ["../*"]
    }
  },
  "include": ["./src"]
}
